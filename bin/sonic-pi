# we only need to dbus-lanch if there is not session bus.
if test -z "$DBUS_SESSION_BUS_ADDRESS"; then
    eval $(dbus-launch --auto-syntax)
fi

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

$DIR/../app/gui/qt/build/sonic-pi
